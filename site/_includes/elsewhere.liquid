<div class="flex w-breakout-1 -mx-1 mb-6 flex-wrap">
  {% for link in social %}
  <div class="w-full small:w-1/2 normal:w-1/3 px-1 pb-1 small:pb-2">
    <a href="{{ link.url }}"
      class="
        border-none
        rounded
        bg-cloud
        inline-block
        w-full
        px-1 normal:px-2
        pt-4 normal:pt-6
        pb-1 normal:pb-1-1/2
        text-black
        leading-none
      ">
      <span class="block text-large font-emphasized mb-1/2">{{ link.description }}</span>
      <span class="block text-steel">{{ link.title }}</span>
    </a>
  </div>
  {% endfor %}
</div>
