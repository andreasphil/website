<a href="{{ url }}"
  title="{{ title }}"
  class="
    block
    border-none
    font-emphasized
    hover:bg-{{ color }}-200
    hover:text-{{ color }}-700
    px-3
    py-2
    rounded-normal
    small:inline

    {% if page.url == url %}
      bg-{{ color }}-200
      text-{{ color }}-700
    {% else %}
      bg-transparent
      text-gray-600
    {% endif %}
  ">
  <span class="mr-2 normal:mr-1">{{- icon -}}</span>
  {{- title -}}
</a>
